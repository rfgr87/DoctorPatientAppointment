<% if !@appointment.nil?%>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%else%>
  <h5>There was an error with that information<h5>
<%end%>
<% if !session[:doctor_id].nil? %>
<%= link_to "Doctor's Page", doctor_path(session[:doctor_id])%><br>
<% end %>
<%= link_to "Home Page", "/"%><br>

