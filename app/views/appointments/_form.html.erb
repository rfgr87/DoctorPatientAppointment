<% if @appointment.errors.any?%>
<h5> <%=@appointment.errors.full_messages.to_sentence%></h5>
<%end%><br>

<%= form_for @appointment do |f| %>
  <%= f.label :date %><br>
  <%= f.datetime_field :date %><br>
  <% f.label :doctor_name %><br>
  <%= @doctor.name%><br>
  <%= f.label :patient_id %><br>
  <%= f.text_field :patient_id, :value=> @patient.id, :readonly=>true %><br>
  <%= f.submit %>
<% end %>
