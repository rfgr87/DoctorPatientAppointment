<%= form_for @appointment do |f| %>
  <%= f.datetime_select :date %>
  <%= f.label :doctor_name %>
  <%= f.text_field :doctor %>
  <%= f.collection_select :patient, Patient.all, :id, :name %>
  
  <%= f.collection_check_boxes :patient, @patients, :id, :name %>
  <%= f.fields_for :patients, @appointment.patients.build do |patients_fields| %>
    <%= patients_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>